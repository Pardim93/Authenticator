{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es2019"],
    "sourceMap": true,
    "newLine": "LF",
    "pretty": false,
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "*": ["packages/*", "*"]
    },
    "types": ["node", "mocha"],
    "jsx": "react-native"
  },
  "include": [
    "packages/*/src",
    "packages/*/test",
    "packages/*/index.ts",
    "packages/*/Development",
    "packages/*/scripts",
    "packages/*/*"
  ],
  "exclude": ["node_modules"]
}
